<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/business_detail_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/business_detail_et_name" />

    <EditText
        android:id="@+id/business_detail_et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/business_detail_et_address" />

    <TextView
        android:id="@+id/business_detail_tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:text="@string/business_detail_tv_longitude"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/business_detail_tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:text="@string/business_detail_tv_latitude"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/business_detail_iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/business_detail_iv_photo"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/business_detail_btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business_detail_btn_location" />

    <Button
        android:id="@+id/business_detail_btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business_detail_btn_camera" />

    <Button
        android:id="@+id/business_detail_btn_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business_detail_btn_gallery" />
    
    <Button
        android:id="@+id/business_detail_btn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/business_detail_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_detail_btn_submit" />

        <Button
            android:id="@+id/business_detail_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_detail_btn_cancel" />
    </LinearLayout>

</LinearLayout>