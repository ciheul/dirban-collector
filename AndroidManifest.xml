<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ciheul.dirbancollector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ciheul.dirbancollector.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ciheul.dirbancollector.BusinessDetailActivity"
            android:label="@string/label_business_detail" >
        </activity>

        <provider
            android:name="com.ciheul.dirbancollector.CollectorContentProvider"
            android:authorities="com.ciheul.dirbancollector.CollectorContentProvider" >
        </provider>
    </application>

</manifest>